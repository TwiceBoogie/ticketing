{
  "extends": "@twicetickets/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["core/*"],

      // // Explicit mappings
      // "@/actions/*": ["core/actions/*"],
      // "@/components/*": ["core/components/*"],
      // "@/constants/*": ["core/constants/*"],
      // "@/hooks/*": ["core/hooks/*"],
      // "@/layouts/*": ["core/layouts/*"],
      // "@/lib/*": ["core/lib/*"],

      "@/helpers/*": ["helpers/*"],
      "@/public/*": ["public/*"],
      "@/styles/*": ["styles/*"],
      "@/types/*": ["types/*"]
    },
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}

